<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to micropost.user.name, micropost.user %></strong> <small><%= time_ago_in_words(micropost.created_at) %></small>
          <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete,
                                             data: { confirm: "You sure?" }, class: "delete is-pulled-right" %>
          <% end %>
          <br>
          <%= micropost.content %>
          <br>
          <%= image_tag micropost.picture.url if micropost.picture? %>
        </p>
      </div>
    </div>
  </article>
</div>