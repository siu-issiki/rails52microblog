<% if object.errors.any? %>
  <div class="content">
    <div id="error_explanation" class="notification is-danger">
      <div class="subtitle">
        The form contains <%= pluralize(object.errors.count, "error") %>.
      </div>
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>